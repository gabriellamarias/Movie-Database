@model MovieDatabase.Models.Movie

@{
    ViewData["Title"] = "Search";
}

<h1>Find a Movie</h1>
<hr />
<div class="text-lg-center">
    @using (Html.BeginForm("Search", "Movies", FormMethod.Get))
    {
        <br />
        <br />
        @Html.RadioButton("option", "Title") <text>Title</text>
        @Html.RadioButton("option", "Genre")<text>Genre</text>
        @Html.TextBox("search") <input type="submit"
                                       name="submit"
                                       value="Search" />}
</div>


